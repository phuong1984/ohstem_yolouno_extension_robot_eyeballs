<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ROBOT EYEBALLS" colour="#5d2c91" icon="tv">
    <sep gap="10"></sep>
    <label text="Khởi tạo" web-class="blockLabelStyle"></label>
    <block type="eyeballs_create"></block>
    
    <!-- Vẽ mắt -->
    <sep gap="10"></sep>
    <label text="Vẽ và chuyển động mắt" web-class="blockLabelStyle"></label>
    <block type="eyeballs_draw_eyes">
      <value name="X1"><shadow type="math_number"><field name="NUM">18</field></shadow></value>
      <value name="Y1"><shadow type="math_number"><field name="NUM">5</field></shadow></value>
      <value name="X2"><shadow type="math_number"><field name="NUM">70</field></shadow></value>
      <value name="Y2"><shadow type="math_number"><field name="NUM">5</field></shadow></value>
      <field name="LEFT_DIR">3</field>
      <field name="RIGHT_DIR">7</field>
    </block>
    <block type="eyeballs_animate_eyes"></block>
    
    <!-- Biểu cảm -->
    <sep gap="10"></sep>
    <label text="Biểu cảm của mắt" web-class="blockLabelStyle"></label>
    <block type="eyeballs_draw_eyes_expression">
      <field name="EXPRESSION">0</field>
    </block>
    <block type="eyeballs_scroll_image">
      <field name="EXPRESSION">0</field>
      <field name="DIRECTION">"left"</field>
      <value name="STEPS"><shadow type="math_number"><field name="NUM">10</field><field name="MIN">1</field><field name="MAX">50</field></shadow></value>
      <value name="DELAY"><shadow type="math_number"><field name="NUM">0.05</field></shadow></value>
    </block>
  </category>
</xml>